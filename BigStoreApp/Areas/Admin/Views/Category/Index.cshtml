
@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<Category>
<h1>Category Admin Index View</h1>

<div class="d-flex justify-content-end">
    <a class="btn btn-outline-success" asp-action="CreateCategory">
        <span>&#43;</span> CREATE
    </a>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Category Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Category item in Model)
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.Name</td>
            </tr>
        }
    </tbody>
</table>



@{
    ViewData["Title"] = "CreateProduct";
}
@model ProductDTOInsertion

<div class="text-center">
    <div class="display-6"></div>
</div>

<form method="post" asp-action="CreateProduct" enctype="multipart/form-data">
    <div class="text-danger" asp-validation-summary="All"></div>
    
    <div class="form-group my-3">
        <label asp-for="CategoryId"></label>
        <select class="form-control" asp-items="@ViewBag.Categories" asp-for="CategoryId"> </select>
    </div>

    <div class="form-group my-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="Please fill it."/>
    </div>
    <div class="form-group my-3">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" placeholder="Please fill it." />
    </div>
    <div class="form-group my-3">
        <label asp-for="Summary"></label>
        <input asp-for="Summary" class="form-control" placeholder="Summary" />
    </div>
    <div class="form-group my-3">
        <label asp-for="ImageURL"></label>
        <input name="file" type="file" class="form-control" placeholder="Select Path" accept="image/*" />
    </div>

    <div class="form-group my-3">
        <div>
            <button class="btn btn-primary" type="submit">
                <i class="fa fa-save"></i> Save
            </button>
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="fa fa-list"> </i>
                Products
            </a>
        </div>
    </div>
</form>
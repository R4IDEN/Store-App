
@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<Product>

<div class="text-center">
    <div class="display-6">Products</div>

    <div class="d-flex justify-content-end">
        <a class="btn btn-outline-success" asp-action="CreateProduct">
            <span>&#43;</span> CREATE
        </a>
    </div>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Product Image</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach(Product item in Model)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("c")</td>
                    <td>
                        <img src="@Url.Content("~/" + item.ImageUrl)" alt="@item?.Name" width="50">
                    </td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-warning" asp-action="UpdateProduct" asp-route-id="@item.ProductId">
                                <i class="fa fa-edit"></i>
                                Update </a>
                            <a class="btn btn-info" target="_blank" asp-area="" asp-controller="Product" asp-action="Get" asp-route-id="@item.ProductId">
                                <i class="fa fa-search"></i>
                                Search
                            </a>
                            <a class="btn btn-danger" asp-action="DeleteProduct" asp-route-id="@item.ProductId">
                                <i class="fa fa-trash"></i>
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

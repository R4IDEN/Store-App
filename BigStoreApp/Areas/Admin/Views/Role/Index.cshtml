@model List<RoleDTO>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<div class="container mt-4">
    <div class="col-md-8 text-center mx-auto">
        <h3 class="mb-4">Roles</h3>

        <!-- Roles Table -->
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Role Name</th>
                    <th>Number of Users</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td>@role.RoleName</td>
                        <td>@role.NumberOfuser</td>
                        <td>
                            <form asp-action="DeleteRole" asp-controller="Role" method="post" style="display:inline;">
                                <input type="hidden" name="roleId" value="@role.RoleId" />
                                <button type="submit" class="btn btn-danger btn-sm" data-toggle="tooltip" data-placement="top" title="Delete">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Create Role Form -->
        <div class="d-flex justify-content-center mt-4">
            <form asp-action="CreateRole" method="post" class="d-flex">
                <input type="text" name="RoleName" class="form-control me-2" placeholder="Enter role name" required />
                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
    </div>
</div>

@model UserDTOForInsertion

<div class="text-center my-5">
    <div class="display-6"> CREATE USER </div>
</div>

<form method="post" asp-action="Create">
    <div class="row">
        <div class="col-md-6">
            <div class="lead p-2 mt-2">
                User Informations
            </div>
            <hr />
            <div class="form-group my-1">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" placeholder="Please enter your full name" />
            </div>
            <div class="form-group my-1">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" placeholder="Please enter email" />
            </div>
            <div class="form-group my-1">
                <label asp-for="Password"></label>
                <input asp-for="Email" class="form-control" placeholder="******" />
            </div>
            <div class="form-group my-1">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="+() XXX-XXX-XX-XX " />
            </div>

            <div class="form-group my-3">
                <div class="btn-group d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary" style="margin-right: 7px;">
                        Submit
                    </button>
                    <a asp-action="Index" class="btn btn-outline-primary">
                        <i class="fa-solid fa-arrow-left"></i> BACK
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="lead p-2 mt-2">
                User Roles (Select at least one role)
            </div>
            <hr />
            <div>
                @foreach (var item in Model.Roles)
                {
                    <div class="form-check my-2">
                        <input type="checkbox" name="Role" value="@item" class="form-check-input" />
                        <label class="form-check-label">@item</label>
                    </div>
                }
            </div>
        </div>
    </div>
</form>
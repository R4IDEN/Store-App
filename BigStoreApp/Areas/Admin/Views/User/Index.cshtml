@model IEnumerable<IdentityUser>

<div class="text-center my-5">
    <div class="display-6"> USERS </div>
</div>

<div class="d-flex justify-content-end">
    <a class="btn btn-outline-success" asp-action="Create">
        <span>&#43;</span> CREATE
    </a>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>UserName</th>
            <th>Roles</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (IdentityUser item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.UserName</td>
                <td user-name="@item.UserName" user-role=""></td>
                <td>
                    <div class="btn-group">
                        <a data-toggle="tooltip"
                           data-placement="top"
                           title="Edit"
                           class="btn btn btn-warning" asp-action="Update" asp-route-id="@item.UserName" style="margin-right: 5px;"> <i class="fa-regular fa-pen-to-square"></i> </a>

                        <a data-toggle="tooltip"
                           data-placement="top"
                           title="Reset Password"
                           class="btn btn btn-info" asp-action="ResetPassword" asp-route-id="@item.UserName" style="margin-right: 5px;"> <i class="fa-solid fa-key"></i> </a>

                        <form method="post" asp-action="DeleteUser">
                            <input type="hidden" name="UserName" value="@item.UserName">
                            <button type="submit" class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Delete User"> <i class="fa-solid fa-trash"></i> </button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
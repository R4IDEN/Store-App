
@model IEnumerable<IdentityUser>

<div class="text-center my-5">
    <div class="display-6"> USERS </div>
</div>

<table class ="table table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>UserName</th>
            <th>Roles</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (IdentityUser item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.UserName</td>
                <td>-</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-sm btn-warning" asp-action="Update" asp-route-id="@item.UserName" style="margin-right: 5px;"> Edit </a>
                        <a class="btn btn-sm btn-info" style="margin-right: 5px;"> Reset Pass </a>
                        <a class="btn btn-sm btn-danger"> Delete </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@model ResetPasswordDTO

<div class="text-center my-5">
    <div class="display-6"> RESET PASSWORD @Model.UserName </div>
</div>

<div class="text-danger" asp-validation-summary="All"></div>

<form method="post" asp-action="ResetPassword">
    <input type="hidden" asp-for="UserName"/>

    <div class="form-group my-2">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" placeholder="Enter your new password."/>
    </div>

    <div class="form-group my-2">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control" placeholder="Re-enter your new password." />
    </div>

    <div class="btn-group">
        <button type="submit" class="btn btn-primary">
            <i class="fa fa-solid fa-key"></i>
            UPDATE
        </button>
        <a class="btn btn-outline-primary" asp-action="Index">
            <i class="fa fa-solid fa-users"></i>
            RETURN BACK
        </a>
    </div>
</form>
@{
    ViewData["Title"] = "Index";
}
@model ProductListViewModel

<h1>Products</h1>
<br/>

<div class="row">
    <div class="col-md-2">
        @await Component.InvokeAsync("CategoriesMenu")
        @await Component.InvokeAsync("ProductFilterMenu")
        <div products="" number="3"></div>
    </div>

    <div class="col-md-10">  
        <div class="row my-3 ">
            @foreach (Product product in Model.Products)
            {
                <partial name="ProductCard" model="@product" />
            }
        </div>
        <div>
            <div 
                page-model="@Model?.Pagination" 
                page-action="Index"
                page-classes-enabled="true"
                page-class="btn"
                page-class-normal="btn-outline-dark"
                page-classes-selected="btn-primary"
                class="btn-group">
            </div>
        </div>
    </div>
</div>

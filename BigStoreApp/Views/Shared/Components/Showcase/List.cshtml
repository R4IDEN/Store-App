@model IEnumerable<Product>

<div class="mt-5 text-center border-bottom">
    <h6 class="display-6"> Products </h6>
</div>

<div class="row">
    @foreach(var item in Model)
    {
        <div class="col-md-3 my-3">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title"> @item.Name</h5>
                    <p class="card-text"> @item.Price </p>
                    <a asp-action="Update" asp-controller="Product" asp-route-id="@item.ProductId" class="btn btn-primary"> Edit </a>,
                </div>

                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <div class="form-check form-switch">
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" checked="@item.Showcase" disabled />
                            <label class="form-check-label" for="flexSwitchCheckDefault"> Showcase </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
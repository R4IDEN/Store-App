
@{
    ViewData["Title"] = "Apply";
}
@model Candidate

<h1>Apply</h1>

<form method="post" asp-action="Apply">
    <div class="form-group my-2">
        <label asp-for ="Email"></label>
        <input asp-for ="Email" class="form-control" />
    </div>
    <div class="form-group my-2">
        <label asp-for="FullName"> </label>
        <input asp-for="FullName" class="form-control" />
    </div>
    <div class="form-group my-2">
        <label asp-for="Age"></label>
        <select asp-for="Age" class="form-control">
            <option>18</option>
            <option>19</option>
            <option>20</option>
            <option>21</option>
            <option>22</option>
            <option>22+</option>
        </select>
    </div>

    <fieldset>
        <legend>Select Course</legend>
        <p>
            <input id="mvc" type="radio" asp-for="SelectedCourse" value="MVC" checked/>
            <label>MVC</label>
        </p>
        <p>
            <input id="mvc" type="radio" asp-for="SelectedCourse" value="API" />
            <label>API</label>
        </p>
    </fieldset>

    <div>
        <button class="btn btn-primary" type="submit"> APPLY </button>
        <a class="btn btn-warning" asp-controller="Home" asp-action="Index">HOME</a>
    </div>
</form>

@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<Candidate>

<h1>Index</h1>
@if(Model.Any())
{
    <h6 class="display-6"> APPLICATIONS(@Model.Count()) </h6>
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Email</th>
                <th>Full Name</th>
                <th>Apply At</th>
                <th>Course</th>
            </tr>
        </thead>
        <tbody>
            @foreach(Candidate item in Model)
            {
                <tr>
                    <th>@item.Email</th>
                    <th>@item.FullName</th>
                    <th>@item.CreatedDate</th>
                    <th>@item.SelectedCourse</th>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        There is no application. Please click here to
        <a class="alert-link" asp-action="Apply">apply.</a>
    </div>
}

